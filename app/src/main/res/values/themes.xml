<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anotacoes_app_kotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bar</item>
        <item name="android:colorBackground">@color/app_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_bar</item>

        <!-- Status bar color. -->
